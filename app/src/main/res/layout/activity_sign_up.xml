<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cbg"
    android:orientation="vertical"
    tools:context="com.topzrt.viewstudy2.ui.signup.SignUpActivity">

    <View
        android:id="@+id/activity_sign_up_v"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/colorPrimaryDark"/>

    <include
        layout="@layout/layout_toolbar"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/activity_sign_up_iv"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/ic_launcher"/>

                <TextView
                    android:id="@+id/activity_sign_up_tv_cur_integral_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/activity_sign_up_iv"
                    android:text="当前积分:"
                    android:textColor="@color/c999999"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/activity_sign_up_tv_cur_integral"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@+id/activity_sign_up_tv_cur_integral_tip"
                    android:layout_toRightOf="@+id/activity_sign_up_tv_cur_integral_tip"
                    android:text="999999"
                    android:textColor="@color/c555555"/>

                <TextView
                    android:id="@+id/activity_sign_up_tv_signed_up_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/activity_sign_up_tv_cur_integral_tip"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/activity_sign_up_iv"
                    android:text="本月已连续签到:"
                    android:textColor="@color/c999999"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/activity_sign_up_tv_signed_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/activity_sign_up_tv_cur_integral_tip"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@+id/activity_sign_up_tv_signed_up_tip"
                    android:layout_toRightOf="@+id/activity_sign_up_tv_signed_up_tip"
                    android:text="0"
                    android:textColor="@color/c555555"/>

                <TextView
                    android:id="@+id/activity_sign_up_tv_signed_up_tip_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/activity_sign_up_tv_cur_integral_tip"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@+id/activity_sign_up_tv_signed_up"
                    android:layout_toRightOf="@+id/activity_sign_up_tv_signed_up"
                    android:text="天"
                    android:textColor="@color/c999999"/>

                <Button
                    android:id="@+id/activity_sign_up_btn_sign_up"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/selector_sign_up"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:text="签到"
                    android:textColor="@color/cA8C1EA"
                    android:textSize="16sp"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/c999999"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/shape_sign_up"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:text="连续签到奖励"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/c555555"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/activity_sign_up_ll_sign_up_7"

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="连续7天签到奖励"/>

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="120dp"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/icon_continuous_sign_up"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/activity_sign_up_ll_sign_up_14"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="连续14天签到奖励"/>

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="120dp"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/icon_continuous_sign_up"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/activity_sign_up_ll_sign_up_21"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="连续21天签到奖励"/>

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="120dp"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/icon_continuous_sign_up"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/activity_sign_up_ll_sign_up_30"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="连续30天签到奖励"/>

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="120dp"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/icon_continuous_sign_up"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
